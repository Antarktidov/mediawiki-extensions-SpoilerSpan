{
    "name": "SpoilerSpan",
    "author": "Antarktidov",
    "url": "https://github.com/Antarktidov/mediawiki-extensions-SpoilerSpan",
    "descriptionmsg": "spoilerspan-desc",
    "version": "1.0.0",
    "license-name": "MIT",
    "type": "other",
    "requires": {
        "MediaWiki": ">= 1.35.0"
    },
    "AutoloadClasses": {
        "SpoilerSpanHooks": "includes/SpoilerSpanHooks.php"
    },
    "Hooks": {
        "ParserFirstCallInit": "SpoilerSpanHooks::onParserSetup"
    },
    "ResourceModules": {
        "ext.SpoilerSpan": {
            "styles": [
                "extensions/SpoilerSpan/resources/ext.SpoilerSpan.css"
            ],
            "scripts": [
                "extensions/SpoilerSpan/resources/ext.SpoilerSpan.js"
            ],
            "targets": [ "desktop", "mobile" ],
            "position": "top"
        }
    },
    "MessagesDirs": {
        "SpoilerSpan": [
            "i18n"
        ]
    },
    "manifest_version": 2
}
